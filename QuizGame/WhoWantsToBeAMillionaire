
#creates question class and question, options, answer as instance attributes
class Question:
    def __init__(self, question, options, answer):
        self.question = question
        self.options = options
        self.answer = answer
#displays question and loops through options
    def display(self):
        print(self.question)
        for option in self.options:
            print(option)

#define questions and options in a list of dictionaries
questions = [
