#define prize money
prize_money = [
"£100",
"£500",
"£1,000",
"£2,500",
"£5,000",
"£10,000",
"£25,000",
"£100,000",
"£500,000",
"£1,000,000"
]

#show question to player
def showquestion(question):
#prints the question
    print(question["question"])
#runs for loop through options part of dictionary and prints options
    for option in question["options"]:
        print(option)

#show current prize money to player
def showprizemoney(question_num):
#prints string saying current question and question number using while loop found further down
    print("Current question:", question_num + 1)
#prints string saying current prize money and returns the prize money for the current question number
    print("Prize Money:", prize_money[question_num])
    print("")
    
#starts game at question number 1 and prize money won at £0
def startgame():
    question_number = 0
    current_prize = 0
    with open("titleasciiart.txt") as f:
        titleart = f.read()
    print(titleart)
    print("Hello! Welcome to Who Wants to be a Millionaire!\n")
    
    #while loop that displays prize and question as long as there are questions left
    while question_number < len(questions):
        showprizemoney(question_number)
        showquestion(questions[question_number])
    #asks for answer and saves answer into temporary answer variable
        answer = input("\nPlease choose your answer. If you would like to quit, please type Quit. ")
    #if function that tells player if theyre correct or wrong, also quits if quit is typed out.    
        if answer == questions[question_number]["answer"]:
            current_prize = prize_money[question_number]
            question_number += 1
            print("\nYou are correct! Here comes the next question.\n")
            print("---------------------------------------------------------------------------------------------------------------------------------------------------------")
        elif answer == "Quit":
            break
        else:
            print("\nYou are incorrect! You have lost the game.\n")
            break
#prints you failed after game is lost, also shows total money won
    print("The game has finished.")
    print("Total money won: ", current_prize)
#runs the function to start the game when the file is executed
startgame()
